{
  "name": "datalake",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist *.tsbuildinfo || rmdir /S /Q dist 2>nul",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts,js,json --exec ts-node src/index.ts",
    "postbuild": "copyfiles -u 1 src/public/**/* dist/"
  },
  "dependencies": {
    "express": "^4.19.2",
    "@workspace/common": "*",
    "@workspace/instrument": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
